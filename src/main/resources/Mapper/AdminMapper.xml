<?xml version="1.0" encoding = "UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.DevOOPS.barrier.Mapper.AdminMapper">

    <insert id="createAdmin" parameterType="com.DevOOPS.barrier.DTO.dto">
        INSERT INTO admin(admin_id, admin_password)
        VALUES(#{adminId}, #{adminPassword})
    </insert>
    <delete id="deleteAdmin" parameterType="java.lang.String">
        DELETE FROM admin WHERE admin_id = #{adminId}
    </delete>
    <insert id="ReportAPICall" parameterType="com.DevOOPS.barrier.DTO.ReportAPIdto">
        INSERT INTO TyphoonAPI(stn_id, tm_Fc, tm_Seq, regionData, title1, title2)
        VALUES(#{stnId}, #{tmFc}, #{tmSeq}, #{regionData}, #{title1}, #{title2})
    </insert>
    <select id="RegionData" resultType="java.lang.String" parameterType="java.lang.Integer">
        SELECT REGION FROM Region WHERE STN_ID = ${stnId}
    </select>



</mapper>